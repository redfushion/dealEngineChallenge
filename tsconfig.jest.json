{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],  // Incluir Jest y Node como tipos
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.test.ts", "jest.config.ts"],  // Incluir solo archivos de pruebas y jest config
  "exclude": ["node_modules"]
}